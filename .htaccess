# Security settings

# Disable indexing
# Options -Indexes

# Restrict directories
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^(config|includes|helpers|database|data)/ - [F,L]
</IfModule>

# Block files
<FilesMatch "\.(sql|log|env|ini|sh|md)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>

# Block dotfiles
<FilesMatch "^\.">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>
